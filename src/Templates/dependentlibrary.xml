<?xml version="1.0" encoding="utf-8"?>
<ipod>
	<template>
		<name>Dependent library</name>
		<description>Library that include/exclude other libraries</description>
		<parameter type="text" id="libraryname" name="Library name" value="Dependent library"/>
		<parameter type="text" id="libraryorder" name="Library order" value="90"/>
		<parameter type="text" id="menugroup" name="Menu group" value=""/>
		<parameter type="sqlmultiplelist" id="includedlibraries" name="Included contents of libraries" value="" data="select id,name,id from ipod_libraries"/>
		<parameter type="sqlmultiplelist" id="excludedlibraries" name="Excluded contents of libraries" value="" data="select id,name,id from ipod_libraries"/>
		<parameter type="text" id="slimserverpath" name="SlimServer music path" value=""/>
		<parameter type="text" id="ipodpath" name="iPod music path" value=""/>
		<parameter type="text" id="ipodextension" name="iPod music extension" value=""/>
		<parameter type="checkbox" id="trackstat" requireplugins="TrackStat::Plugin" name="Use TrackStat statistics" value="1"/>
		<parameter type="singlelist" id="orderby" name="Order songs by" value="random" data="random=Random,lastadded=Last Added,toprated=Top Rated,mostplayed=Most Played"/>
		<parameter type="text" id="limitnooftracks" name="Maximum number of songs" value=""/>
		<parameter type="text" id="limitsize" name="Maximum library size (in MB)" value=""/>
	</template>
</ipod>

